<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.ViewNoteInfo">

    <Border  x:Name="frm" Padding="10" >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>

        <VerticalStackLayout Spacing="7" x:Name="vLayout" MaximumHeightRequest="150">
            <Label x:Name="lblID" HorizontalOptions="Center"/>
            <Label FontAttributes="Bold" x:Name="lblNote" Grid.Row="2" MaximumHeightRequest="100"/>
            <Label x:Name="lblNoteDate"/>
        </VerticalStackLayout>

    </Border>
    
</ContentView>
