<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.ViewDelete">

    <Border  x:Name="frm" Padding="10" >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>

        <VerticalStackLayout Spacing="10" MaximumHeightRequest="150">

            <Grid ColumnDefinitions="*,*">
                <Label x:Name="lblID" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label x:Name="lblTitle" FontAttributes="Bold" HorizontalOptions="Center" Grid.Column="1"/>
            </Grid>
            <Border Stroke="Black" StrokeThickness="2" x:Name="bLine" Grid.Row="1"/>
            <Label FontAttributes="Bold" x:Name="lblNote" Grid.Row="2" MaximumHeightRequest="100"/>
            <Label x:Name="lblNoteDate"/>

        </VerticalStackLayout>
    
    </Border>
    
</ContentView>
